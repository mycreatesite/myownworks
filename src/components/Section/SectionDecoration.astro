---
import LogoText from '../Element/LogoText.astro';
---

<section id="sectionDecoration">
  <div class="logoContainer">
    <h1>
      <LogoText class="default" color="black" />
      <LogoText class="reverse" color="black" />
    </h1>
  </div>
  <div class="noise"></div>
</section>

<style>
	#sectionDecoration {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
  }
  .logoContainer {
    height: 100%;
    h1 {
      margin: 0;
      height: 100%;
      display: grid;
      align-content: space-between;
      svg {
        width: 100%;
        height: auto;
        transition: 1.5s 2s cubic-bezier(0.87, 0, 0.13, 1);
        &.default {
          margin-top: -6px;
          translate: 0 -100%;
          transform: skewY(-5deg);
          transform-origin: left bottom;
        }
        &.reverse {
          margin-bottom: -6px;
          rotate: 180deg;
          translate: 0 140%;
          transform: skewY(-5deg);
        }
      }
    }
  }
  .noise {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-image: url(../../assets/image/noise.png);
  }
  .is-active {
    .logoContainer {
      svg {
        &.default {
          translate: 0;
          transform: skewY(0);
        }
        &.reverse {
          translate: 0;
          transform: skewY(0);
        }
      }
    }
  }

</style>