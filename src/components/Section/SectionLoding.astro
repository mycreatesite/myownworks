---
import LogoText from '../Element/LogoText.astro';
---

<section id="sectionLoading">
  <div class="container">
    <div class="logo">
      <LogoText class="default" color="white"/>
      <div class="label"></div>
    </div>
  </div>
</section>

<style lang="scss">
  @use "../../assets/css/variables" as var;
	#sectionLoading {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    transition: opacity 2s 1s;
    &.is-deactive {
      opacity: 0;
    }
  }
  .container {
    height: 100%;
    display: grid;
    place-items: center;
  }
  .logo {
    position: relative;
    width: 24vw;
    @include var.breakPoint("sp") {
      width: 80vw;
    }
  }
  .label {
    position: absolute;
    content: '';
    width: 105%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: #000;
    animation: label 3s 1s cubic-bezier(0.85, 0, 0.15, 1);
  }
  @keyframes label {
    0% {
      transform: scaleX(1);
      transform-origin: right;
    }
    25% {
      transform: scaleX(0);
      transform-origin: right;
    }
    75% {
      transform: scaleX(0);
      transform-origin: left;
    }
    100% {
      transform: scaleX(1);
      transform-origin: left;
    }
  }

</style>